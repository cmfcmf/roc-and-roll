{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "noEmit": true,
    "incremental": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./",
    "typeRoots": ["src/shared/types", "./node_modules/@types"],
  },
  "include": [
    "./jest-setup.ts",
    "src/client/**/*",
    "src/server/**/*",
    "src/shared/**/*",
  ],
}
