{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "noEmit": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "./",
    "typeRoots": ["src/shared/types", "./node_modules/@types"]
  },
  "include": [
    "src/client/**/*",
    "src/server/**/*",
    "src/shared/**/*",
  ],
}
